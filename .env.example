# Variables de entorno para desarrollo Docker
# Copia este archivo a .env.local y ajusta los valores según tus necesidades

# Configuración del entorno de desarrollo
NODE_ENV=development
BROWSER=0
CHOKIDAR_USEPOLLING=true

# Configuración de puertos
PORT=3001
ACTUAL_SERVER_PORT=5006

# URLs de servicios
ACTUAL_SERVER_URL=http://localhost:5006

# Configuración de debugging
DEBUG=actual:*
NODE_OPTIONS=--inspect=0.0.0.0:9229

# Configuración de base de datos (para desarrollo avanzado)
DATABASE_URL=sqlite:///data/server-files/actual.db
POSTGRES_URL=postgresql://actual:actual123@localhost:5432/actual_dev

# Configuración de Redis (opcional)
REDIS_URL=redis://localhost:6379

# Configuración de logs
LOG_LEVEL=debug
LOG_FORMAT=combined

# Configuración de sync server
ACTUAL_CONFIG_PATH=/data/config.json
ACTUAL_USER_FILES=/data/user-files
ACTUAL_SERVER_FILES=/data/server-files

# Configuración de seguridad (para desarrollo)
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET=dev-jwt-secret-change-in-production

# Configuración de desarrollo específica
HOT_RELOAD=true
LIVE_RELOAD=true
WATCH_MODE=true

# Configuración de testing
TEST_ENV=docker
TEST_DATABASE_URL=sqlite:///tmp/test.db

# Configuración de networking
NETWORK_MODE=bridge
COMPOSE_PROJECT_NAME=actual-dev

# Variables para profiles de docker-compose
ENABLE_POSTGRES=false
ENABLE_REDIS=false
ENABLE_MONITORING=false
