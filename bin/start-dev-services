#!/bin/bash

#####################################################
# Script mejorado para desarrollo con puertos correctos
#####################################################

set -e

echo "ðŸš€ Iniciando entorno de desarrollo Actual Budget..."
echo "ðŸŒ Frontend: http://localhost:${PORT:-3001}"
echo "ðŸ”„ Sync Server: http://localhost:${ACTUAL_PORT:-5006}"

# FunciÃ³n para ejecutar sync server con puerto correcto
start_sync_server() {
    echo "ðŸ”„ Iniciando sync server en puerto ${ACTUAL_PORT:-5006}..."
    
    # Configurar puerto especÃ­fico para sync server
    if [ -n "${ACTUAL_PORT}" ]; then
        SYNC_PORT=${ACTUAL_PORT}
    else
        SYNC_PORT=5006
    fi
    
    cd packages/sync-server
    PORT=${SYNC_PORT} yarn start-monitor &
    SYNC_PID=$!
    cd ../..
    
    return 0
}

# FunciÃ³n para ejecutar frontend
start_frontend() {
    echo "ðŸŒ Iniciando frontend en puerto ${PORT:-3001}..."
    yarn start &
    FRONTEND_PID=$!
    
    return 0
}

# Iniciar servicios en paralelo
start_sync_server
start_frontend

# FunciÃ³n de cleanup
cleanup() {
    echo "ðŸ›‘ Deteniendo servicios..."
    if [ ! -z "${SYNC_PID}" ]; then
        kill $SYNC_PID 2>/dev/null || true
    fi
    if [ ! -z "${FRONTEND_PID}" ]; then
        kill $FRONTEND_PID 2>/dev/null || true
    fi
    exit 0
}

# Configurar trap para cleanup
trap cleanup SIGTERM SIGINT

# Esperar a los procesos
wait $SYNC_PID $FRONTEND_PID
